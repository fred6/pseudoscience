<config>
    <site_title>my site</site_title>
    <site_dir>site/</site_dir>
    <out_dir>out/</out_dir>
    <templates_dir>templates/</templates_dir>
    <pages_ext>.md</pages_ext>
    <templates>
        <default_layout>layout</default_layout>
        <default_page>page_content</default_page>
    </templates>
    <render_rules>
        <rule>
            <select>blather/*</select>
            <page_template>page_blather</page_template>
        </rule>
        <rule>
            <select>index</select>
            <page_template>index_content</page_template>
        </rule>
    </render_rules>
</config>
